<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/profile_activity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlacedOrderActivity">


    <androidx.appcompat.widget.Toolbar
        android:background="@drawable/gradient_background"
        android:id="@+id/profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ScrollView


                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <EditText

                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:minHeight="50dp"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:id="@+id/customer_name"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                            android:inputType="text"

                        android:textColor="@color/black"
                        android:hint="Enter Name"


                        >



                    </EditText>

//
                        <EditText

                            android:layout_width="match_parent"
                            android:background="@drawable/border"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:minHeight="50dp"
                            android:layout_weight="1"
                            android:textSize="12dp"
                            android:id="@+id/address_p"
                            android:inputType="textMultiLine"
                            android:layout_marginBottom="5dp"
                            android:textAlignment="center"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:textColor="@color/black"
                            android:hint="Enter Address"


                            >



                        </EditText>
                        ///
                        <EditText

                            android:layout_width="match_parent"
                            android:background="@drawable/border"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:minHeight="50dp"
                            android:layout_weight="1"
                            android:textSize="12dp"
                            android:id="@+id/contactp"
                            android:layout_marginBottom="5dp"
                            android:textAlignment="center"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:inputType="phone"

                            android:textColor="@color/black"
                            android:hint="Enter Contact Number"


                            >



                        </EditText>
                        //
                        <EditText

                            android:layout_width="match_parent"
                            android:background="@drawable/border"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:minHeight="50dp"
                            android:layout_weight="1"
                            android:textSize="12dp"
                            android:visibility="gone"
                            android:id="@+id/phonennu"
                            android:layout_marginBottom="5dp"
                            android:textAlignment="center"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:inputType="phone"

                            android:textColor="@color/black"
                            android:hint="Enter Phone Number"


                            >



                        </EditText>
//
                        <EditText

                            android:layout_width="match_parent"
                            android:background="@drawable/border"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:minHeight="50dp"
                            android:layout_weight="1"
                            android:textSize="12dp"
                            android:id="@+id/parcelitem_p"
                            android:layout_marginBottom="5dp"
                            android:textAlignment="center"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:inputType="numberDecimal"

                            android:textColor="@color/black"
                            android:hint="Enter Parcel Item"


                            >



                        </EditText>
                        /// <EditText

                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:minHeight="50dp"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:id="@+id/weight_p"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"

                        android:textColor="@color/black"
                        android:hint="Enter Weight"
                        android:inputType="numberDecimal"


                        >



                    </EditText>
                        <Button
                            android:id="@+id/profile_change"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginLeft="30dp"
                            android:visibility="visible"
                            android:onClick="placed"
                            android:background="@drawable/edit_settings_bg"
                            android:fontFamily="@font/circular_std_book"
                            android:gravity="center"
                            android:text="Submit Order"
                            android:textAllCaps="false"
                            android:textColor="@color/white"

                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
